<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/album"
        tools:src="@drawable/warriors"
        android:layout_width="0pt"
        android:layout_height="@dimen/imageHeight"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15pt"
        android:layout_marginLeft="18pt"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/songTitle"
        tools:text="song title"
        app:layout_constraintTop_toTopOf="@id/album"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/album"
        app:layout_constraintBottom_toTopOf="@id/artisteNameText"
        android:layout_marginTop="16pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/textSizeLarge"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        tools:text="artist name"
        app:layout_constraintTop_toBottomOf="@id/songTitle"
        app:layout_constraintRight_toRightOf="@id/songTitle"
        app:layout_constraintLeft_toLeftOf="@id/songTitle"
        app:layout_constraintBottom_toTopOf="@id/playedTimes"
        android:id="@+id/artisteNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/textSizeSmall"
        android:lines="1"
        android:layout_weight="1"/>

    <TextView
        tools:text="# played"
        app:layout_constraintTop_toBottomOf="@id/artisteNameText"
        app:layout_constraintLeft_toLeftOf="@id/artisteNameText"
        app:layout_constraintRight_toRightOf="@id/artisteNameText"
        app:layout_constraintBottom_toTopOf="@id/buttonSection"
        android:id="@+id/playedTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/textSizeSmall"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttonSection"
        app:layout_constraintTop_toBottomOf="@id/playedTimes"
        app:layout_constraintLeft_toLeftOf="@id/playedTimes"
        app:layout_constraintRight_toRightOf="@id/playedTimes"
        android:layout_marginTop="12pt">


        <ImageButton
            android:background="@null"
            android:id="@+id/btnPrevious"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_previous" />

        <ImageButton
            android:background="@null"
            android:scaleType="fitCenter"
            android:id="@+id/btnPlay"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            app:srcCompat="@drawable/ic_play" />

        <ImageButton
            android:background="@null"
            android:id="@+id/btnNext"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            app:srcCompat="@drawable/ic_next" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>